
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String      @id @default(uuid()) // Assuming `id` is autogenerated
  name            String?
  email           String      @unique
  emailVerified   DateTime?
  image           String?

  // Define the relationships
  accounts        Account[]
  sessions        Session[]
  rooms           Room[]
}

model Account {
  provider          String
  providerAccountId String
  userId            String
  type              String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  // Define the compound primary key
  @@id([provider, providerAccountId])

  // Define the relationships
  user              User       @relation(fields: [userId], references: [id])
}

model Session {
  sessionToken  String    @id
  userId        String
  expires       DateTime

  // Define the relationships
  user          User      @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier  String
  token       String
  expires     DateTime

  // Define the compound primary key
  @@id([identifier, token])
}

// Define the Room model
model Room {
  id            String      @id @default(uuid()) // Assuming `id` is autogenerated
  userId        String
  name          String
  description   String?
  tags          String[]
  githubRepo    String?

  // Define the relationships
  user          User      @relation(fields: [userId], references: [id])
}